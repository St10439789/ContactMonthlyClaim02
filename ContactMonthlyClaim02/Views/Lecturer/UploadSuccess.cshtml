@{
    ViewData["Title"] = "Upload Successful";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="alert alert-success text-center shadow-sm p-4 rounded">
            <h4>✅ File Uploaded Successfully!</h4>
            <p>Your file <strong>@TempData["UploadedFileName"]</strong> has been saved.</p>
            <a href="@Url.Action("LecturerDashboard", "Lecturer")" class="btn btn-primary mt-3">Return to Dashboard</a>
        </div>
    </div>
</body>
</html>


