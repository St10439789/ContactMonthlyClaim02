@{
    ViewData["Title"] = "Submit Claim";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f2f6fc;
        }

        .claim-form-card {
            margin-top: 40px;
            padding: 30px;
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

        .form-label {
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="col-md-8 offset-md-2">
            <div class="claim-form-card">
                <h3 class="mb-4">Submit Monthly Claim</h3>

                <form>
                    <div class="mb-3">
                        <label for="claimMonth" class="form-label">Month</label>
                        <select class="form-select" id="claimMonth">
                            <option selected disabled>Select Month</option>
                            <option>January</option>
                            <option>February</option>
                            <option>March</option>
                            <option>April</option>
                            <option>May</option>
                            <option>June</option>
                            <option>July</option>
                            <option>August</option>
                            <option>September</option>
                            <option>October</option>
                            <option>November</option>
                            <option>December</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="year" class="form-label">Year</label>
                        <input type="number" class="form-control" id="year" value="2025" />
                    </div>

                    <div class="mb-3">
                        <label for="hoursWorked" class="form-label">Hours Worked</label>
                        <input type="number" class="form-control" id="hoursWorked" placeholder="Enter number of hours" />
                    </div>

                    <div class="mb-3">
                        <label for="rate" class="form-label">Hourly Rate ($)</label>
                        <input type="number" class="form-control" id="rate" placeholder="e.g., 50" />
                    </div>

                    <div class="mb-3">
                        <label for="document" class="form-label">Upload Supporting Document</label>
                        <input type="file" class="form-control" id="document" />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Submit Claim</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


