@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Contract Claim System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: lightblue;
            font-family: "Segoe UI", sans-serif;
        }

        .dashboard-card {
            margin-top: 40px;
            padding: 25px;
            background: darkviolet;
            border-radius: 14px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        }

        .status-approved {
            color: #28a745 !important;
            font-weight: bold !important;
        }

        .status-pending {
            color: #ffc107 !important;
            font-weight: bold !important;
        }

        .status-rejected {
            color: #dc3545 !important;
            font-weight: bold !important;
        }

        .btn-upload {
            background-color: #0d6efd;
            color: #fff;
        }

            .btn-upload:hover {
                background-color: #0b5ed7;
            }

        .table thead th {
            background-color: #f8f9fa;
        }

        .modal-content {
            border-radius: 12px;
        }

        .page-title {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        footer {
            margin-top: 40px;
            text-align: center;
            color: #555;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="page-title mt-4 mb-4">
            <h2>💼 Lecturer Dashboard</h2>
            <span class="text-muted">@DateTime.Now.ToString("dd MMM yyyy")</span>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="dashboard-card">
            <div class="row mb-4">
                <div class="col-md-6 mb-2">
                    <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#submitClaimModal">
                        ➕ Submit New Claim
                    </button>
                </div>

               

            <h5 class="mb-3">📄 My Claims</h5>

            <table class="table table-bordered table-hover align-middle">
                <thead>
                    <tr>
                        <th>Claim ID</th>
                        <th>Sessions</th>
                        <th>Hours</th>
                        <th>Amount/Session</th>
                        <th>Total Amount</th>
                        <th>Submitted Date</th>
                        <th>Pre-Approved</th>
                        <th>Pre-Approved Date</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr><td>CLM001</td><td>4</td><td>8</td><td>R100</td><td>R400</td><td>01 Sep 2025</td><td>Yes</td><td>29 Aug 2025</td><td class="status-pending">Pending</td><td><button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#viewClaimModal" data-claim="CLM001">View</button></td></tr>
                    <tr><td>CLM002</td><td>5</td><td>10</td><td>R100</td><td>R500</td><td>01 Aug 2025</td><td>Yes</td><td>10 Aug 2025</td><td class="status-approved">Approved</td><td><button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#viewClaimModal" data-claim="CLM002">View</button></td></tr>
                    <tr><td>CLM003</td><td>4</td><td>8</td><td>R112.50</td><td>R450</td><td>01 Jul 2025</td><td>No</td><td>-</td><td class="status-rejected">Rejected</td><td><button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#viewClaimModal" data-claim="CLM003">View</button></td></tr>
                    <tr><td>CLM004</td><td>6</td><td>12</td><td>R70</td><td>R420</td><td>01 Jun 2025</td><td>Yes</td><td>05 Jun 2025</td><td class="status-approved">Approved</td><td><button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#viewClaimModal" data-claim="CLM004">View</button></td></tr>
                    <tr><td>CLM005</td><td>3</td><td>6</td><td>R130</td><td>R390</td><td>01 May 2025</td><td>No</td><td>-</td><td class="status-pending">Pending</td><td><button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#viewClaimModal" data-claim="CLM005">View</button></td></tr>
                    <tr><td>CLM006</td><td>7</td><td>14</td><td>R85</td><td>R595</td><td>05 Apr 2025</td><td>Yes</td><td>03 Apr 2025</td><td class="status-approved">Approved</td><td><button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#viewClaimModal" data-claim="CLM006">View</button></td></tr>
                    <tr><td>CLM007</td><td>5</td><td>10</td><td>R105</td><td>R525</td><td>10 Mar 2025</td><td>No</td><td>-</td><td class="status-pending">Pending</td><td><button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#viewClaimModal" data-claim="CLM007">View</button></td></tr>
                    <tr><td>CLM008</td><td>8</td><td>16</td><td>R95</td><td>R760</td><td>12 Feb 2025</td><td>Yes</td><td>10 Feb 2025</td><td class="status-approved">Approved</td><td><button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#viewClaimModal" data-claim="CLM008">View</button></td></tr>
                    <tr><td>CLM009</td><td>6</td><td>12</td><td>R110</td><td>R660</td><td>15 Jan 2025</td><td>No</td><td>-</td><td class="status-rejected">Rejected</td><td><button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#viewClaimModal" data-claim="CLM009">View</button></td></tr>
                    <tr><td>CLM010</td><td>4</td><td>8</td><td>R120</td><td>R480</td><td>10 Dec 2024</td><td>Yes</td><td>07 Dec 2024</td><td class="status-pending">Pending</td><td><button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#viewClaimModal" data-claim="CLM010">View</button></td></tr>
                </tbody>
            </table>
        </div>

    </div>

    <!-- Submit Claim Modal -->
    <div class="modal fade" id="submitClaimModal" tabindex="-1" aria-labelledby="submitClaimModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title" id="submitClaimModalLabel">Submit New Claim</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <form asp-action="SubmitClaim" asp-controller="Lecturer" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label">Month</label>
                            <select class="form-select" name="Month" required>
                                <option selected disabled>Select Month</option>
                                <option>January</option>
                                <option>February</option>
                                <option>March</option>
                                <option>April</option>
                                <option>May</option>
                                <option>June</option>
                                <option>July</option>
                                <option>August</option>
                                <option>September</option>
                                <option>October</option>
                                <option>November</option>
                                <option>December</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Year</label>
                            <input type="number" class="form-control" name="Year" value="2025" min="2000" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hours Worked</label>
                            <input type="number" class="form-control" name="HoursWorked" min="0" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hourly Rate (R)</label>
                            <input type="number" class="form-control" name="HourlyRate" min="0" step="0.01" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Additional Notes</label>
                            <textarea class="form-control" name="Notes" rows="3" placeholder="Add any additional details..."></textarea>
                        </div>

                        <div class="dashboard-card">
                            <div class="row mb-4 justify-content-center">
                                <div class="col-md-6 mb-2">
                                    <form asp-action="UploadDocument" asp-controller="Lecturer" enctype="multipart/form-data" method="post" id="uploadForm">
                                        <div class="file-upload-box border border-2 border-primary rounded p-4 text-center bg-light" id="dropZone">
                                            <p class="fw-semibold mb-2">📁 Upload Files <span class="text-muted">or drag & drop here</span></p>
                                            <input type="file" id="fileInput" name="fileUpload" multiple hidden required />
                                            <button type="button" class="btn btn-outline-primary btn-lg" id="chooseFilesBtn">Choose Files</button>

                                            <div id="fileList" class="mt-3 text-start small"></div>
                                        </div>

                                        <div class="d-grid mt-4">
                                            <button type="submit" class="btn btn-primary btn-lg w-100">Upload Files</button>
                                        </div>

                                        <div id="uploadMessage" class="alert alert-success mt-3 d-none" role="alert">
                                            ✅ Your files have been submitted successfully!
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <script>
                            const fileInput = document.getElementById('fileInput');
                            const chooseFilesBtn = document.getElementById('chooseFilesBtn');
                            const fileList = document.getElementById('fileList');
                            const uploadForm = document.getElementById('uploadForm');
                            const uploadMessage = document.getElementById('uploadMessage');
                            const dropZone = document.getElementById('dropZone');

                            chooseFilesBtn.addEventListener('click', () => fileInput.click());
                            fileInput.addEventListener('change', updateFileList);

                            // Update file list display
                            function updateFileList() {
                              fileList.innerHTML = '';
                              Array.from(fileInput.files).forEach((file, index) => {
                                const item = document.createElement('div');
                                item.classList.add('d-flex', 'justify-content-between', 'align-items-center', 'mb-1');
                                item.innerHTML = `
                                  <span>${file.name}</span>
                                  <button type="button" class="btn btn-sm btn-danger remove-btn" data-index="${index}">✖</button>
                                `;
                                fileList.appendChild(item);
                              });
                            }

                            // Remove file before upload
                            fileList.addEventListener('click', (e) => {
                              if (e.target.classList.contains('remove-btn')) {
                                const index = e.target.dataset.index;
                                const dt = new DataTransfer();
                                const files = Array.from(fileInput.files);
                                files.splice(index, 1);
                                files.forEach(f => dt.items.add(f));
                                fileInput.files = dt.files;
                                updateFileList();
                              }
                            });

                            // Drag and drop support
                            dropZone.addEventListener('dragover', e => {
                              e.preventDefault();
                              dropZone.classList.add('bg-primary', 'text-white');
                            });
                            dropZone.addEventListener('dragleave', () => dropZone.classList.remove('bg-primary', 'text-white'));
                            dropZone.addEventListener('drop', e => {
                              e.preventDefault();
                              dropZone.classList.remove('bg-primary', 'text-white');
                              const dt = new DataTransfer();
                              Array.from(fileInput.files).forEach(f => dt.items.add(f));
                              Array.from(e.dataTransfer.files).forEach(f => dt.items.add(f));
                              fileInput.files = dt.files;
                              updateFileList();
                            });

                            // Show success message
                            uploadForm.addEventListener('submit', (e) => {
                              e.preventDefault();
                              uploadMessage.classList.remove('d-none');
                              uploadMessage.scrollIntoView({ behavior: 'smooth' });
                              setTimeout(() => uploadMessage.classList.add('d-none'), 4000);
                              uploadForm.reset();
                              fileList.innerHTML = '';
                            });
                        </script>

                        <style>
                            .file-upload-box {
                                cursor: pointer;
                                transition: all 0.2s ease;
                            }

                                .file-upload-box:hover {
                                    background-color: #eaf3ff;
                                }

                            .remove-btn {
                                font-size: 12px;
                                padding: 2px 6px;
                            }
                        </style>



                        <button type="submit" class="btn btn-success w-100">Submit Claim</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Claim View Modal -->
    <div class="modal fade" id="viewClaimModal" tabindex="-1" aria-labelledby="viewClaimModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h5 class="modal-title" id="viewClaimModalLabel">Claim Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Claim ID:</strong> <span id="claimId"></span></p>
                    <p><strong>Status:</strong> <span id="claimStatus"></span></p>
                    <p><strong>Submitted Date:</strong> 01 Sep 2025</p>
                    <p><strong>Hours:</strong> 8</p>
                    <p><strong>Total:</strong> R400</p>
                    <hr />
                    <p class="text-muted">If your claim is pending, it’s under review. Approved claims will appear in your payment history.</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const modal = document.getElementById('viewClaimModal');
        modal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const claimId = button.getAttribute('data-claim');
            document.getElementById('claimId').textContent = claimId;
            const row = button.closest('tr');
            const status = row.querySelector('td:nth-child(9)').textContent.trim();
            document.getElementById('claimStatus').textContent = status;
        });
    </script>
</body>
</html>


